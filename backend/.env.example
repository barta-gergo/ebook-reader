# Meilisearch Configuration

# Enable or disable Meilisearch integration
# Set to 'false' to disable search functionality
MEILISEARCH_ENABLED=true

# Meilisearch server URL
# Default: http://localhost:7700
MEILISEARCH_HOST=http://localhost:7700

# Meilisearch API key (optional for development)
# Required for production environments
# MEILISEARCH_API_KEY=your-api-key-here

# Name of the search index
# Default: books
MEILISEARCH_INDEX_NAME=books

# Google OAuth Configuration
# Get these values from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# JWT Configuration
# Generate a secure random string for JWT_SECRET
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=24h

# LLM Configuration
# Ollama base URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Default LLM model to use
# Recommended for RTX 4070 Ti 12GB: llama3.2:3b (fast, efficient)
# Other options: llama3.1:8b, mistral:7b, phi3:mini, gemma2:9b, gemma3:1b
# NOTE: Use whatever model you have pulled in Ollama
LLM_MODEL=llama3.2:3b

# LLM Provider (future: could be ollama, openai, anthropic, etc.)
LLM_PROVIDER=ollama