<svg width="300" height="400" viewBox="0 0 300 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="300" height="400" fill="#e0e0e0"/>

  <!-- Book icon -->
  <g transform="translate(100, 120)">
    <!-- Book spine -->
    <rect x="0" y="0" width="100" height="140" fill="#9e9e9e" rx="4"/>

    <!-- Book pages -->
    <rect x="8" y="10" width="84" height="120" fill="#fafafa" rx="2"/>

    <!-- Page lines -->
    <line x1="20" y1="30" x2="80" y2="30" stroke="#bdbdbd" stroke-width="2"/>
    <line x1="20" y1="50" x2="80" y2="50" stroke="#bdbdbd" stroke-width="2"/>
    <line x1="20" y1="70" x2="80" y2="70" stroke="#bdbdbd" stroke-width="2"/>
    <line x1="20" y1="90" x2="80" y2="90" stroke="#bdbdbd" stroke-width="2"/>
    <line x1="20" y1="110" x2="60" y2="110" stroke="#bdbdbd" stroke-width="2"/>
  </g>

  <!-- Text -->
  <text x="150" y="300" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#757575">
    No Cover Available
  </text>
</svg>
